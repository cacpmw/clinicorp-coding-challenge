{
  "openapi": "3.0.0",
  "info": {
    "title": "Clinicorp"
  },
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/get-tasks": {
      "get": {
        "summary": "Get all tasks from the database",
        "operationId": "ListTasks",
        "responses": {
          "200": {
            "description": "Ok"
          },

          "500": {
            "description": "Internal Server Error"
          }
        },
        "tags": ["Tasks"]
      }
    },
    "/insert-tasks": {
      "post": {
        "summary": "Insert a task to the database",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Task"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },

        "tags": ["Tasks"]
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "responsible": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "computer": {
            "type": "string"
          }
        }
      }
    }
  }
}
